<resources>

    <!-- Base application theme. -->

    <style name="MainPinkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Estilo primario para pantallas con palette yupirosa -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:textViewStyle">@style/RobotoTextView</item>
        <item name="android:buttonStyle">@style/RobotoButton</item>
    </style>


    <!-- Estilo secundario para las pantallas con palette yupimorado -->
    <style name="SecondaryPurpleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yupiMorado</item>
        <item name="colorPrimaryDark">@color/yupiMoradoDark</item>
        <item name="colorAccent">@color/yupiMorado</item>
        <item name="android:textViewStyle">@style/RobotoTextView</item>
        <item name="android:buttonStyle">@style/RobotoButton</item>
    </style>

    <!-- CASOS ESPECIALES -->


        <!-- Separador horizontal -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
        <!-- Sub Titulos formularios -->
    <style name="SubTituloFormulario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">@color/yupiRosaDark</item>
    </style>

    <!-- Fonts -->
    <style name="TituloRoboto">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/negro_87</item>
    </style>

    <style name="SubTituloRoboto">
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/negro_87</item>
    </style>

    <!-- View Styles -->
    <style name="RobotoTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="RobotoButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@string/font_roboto_medium</item>
    </style>

    <style name="BotonMenuPrincipal" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@string/font_roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@color/yupiMoradoDark</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MainPinkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EstiloSeparadorListView" parent="@android:style/Widget.ListView">
        <item name="android:divider">#F00</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
